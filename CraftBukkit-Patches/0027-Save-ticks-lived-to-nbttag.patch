Subject: [PATCH] Save ticks lived to nbttag


diff --git a/src/main/java/net/minecraft/world/entity/Entity.java b/src/main/java/net/minecraft/world/entity/Entity.java
index 695181024..1320a8b0a 100644
--- a/src/main/java/net/minecraft/world/entity/Entity.java
+++ b/src/main/java/net/minecraft/world/entity/Entity.java
@@ -2412,6 +2412,7 @@ public abstract class Entity implements Nameable, EntityAccess, ScoreHolder, Syn
             if (maxAirTicks != getDefaultMaxAirSupply()) {
                 output.putInt("Bukkit.MaxAirSupply", getMaxAirSupply());
             }
+            output.putInt("Spigot.ticksLived", this.tickCount);
             // CraftBukkit end
             output.storeNullable("CustomName", ComponentSerialization.CODEC, this.getCustomName());
             if (this.isCustomNameVisible()) {
@@ -2536,6 +2537,11 @@ public abstract class Entity implements Nameable, EntityAccess, ScoreHolder, Syn
             }
 
             // CraftBukkit start
+            // Spigot start
+            if (this instanceof LivingEntity) {
+                this.tickCount = input.getIntOr("Spigot.ticksLived", this.tickCount);
+            }
+            // Spigot end
             this.persist = input.getBooleanOr("Bukkit.persist", this.persist);
             this.visibleByDefault = input.getBooleanOr("Bukkit.visibleByDefault", this.visibleByDefault);
             // SPIGOT-6907: re-implement LivingEntity#setMaximumAir()
